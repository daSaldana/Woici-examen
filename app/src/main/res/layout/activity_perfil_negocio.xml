<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neotecsoft.woici.PerfilNegocio"
    android:background="#fbfbfb">
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/menu" />



    <ImageButton
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton_volver"

        android:src="@drawable/volver_verde"
        android:scaleType="centerInside"
        android:padding="10dp"
        android:alpha=".7"
        android:background="@drawable/menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NP comidas"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView5"
        android:layout_below="@+id/imageView2"
        android:src="@drawable/fondoperfillugar"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/imageView6"
        android:src="@drawable/estoy_aqui"
        android:layout_alignBottom="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:alpha=".8" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/imageView5"
        android:background="#f4f4f4"
        android:id="@+id/relativeLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sobre NP comidas"
            android:id="@+id/textView4"
            android:textColor="#ff4637"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="San Martin 1295 , Dpto 305 , Santiago ,  RegiÃ³n Metropolitana"
            android:id="@+id/textView6"
            android:textColor="#333333"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:textSize="15dp"
            android:layout_marginRight="20dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/pinazul"
            android:scaleType="centerInside"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Comidas, Cocktails"
            android:id="@+id/textView5"
            android:textColor="#333333"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:textSize="12dp" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lugares similares"
        android:id="@+id/textView12"
        android:textColor="#ff4637"
        android:textSize="12dp"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="110dp"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/textView12" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView12"
                    android:src="@drawable/l1"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="LN comida"
                    android:id="@+id/textView11"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView11"
                    android:src="@drawable/l2"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Comidas"
                    android:id="@+id/textView10"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView10"
                    android:src="@drawable/l3"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Louco comida"
                    android:id="@+id/textView9"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center" >

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView9"
                    android:src="@drawable/l4"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sucurs"
                    android:id="@+id/textView8"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/imageView8"
                    android:src="@drawable/l5"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Doggis"
                    android:id="@+id/textView7"
                    android:textSize="11dp" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/imageView13"
                android:src="@drawable/estrella_gris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201"
                android:id="@+id/textView13"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView14"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/imageView15"
                android:src="@drawable/ico_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201"
                android:id="@+id/textView14"
                android:textColor="#ffffff"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView16"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:id="@+id/imageView17"
                android:src="@drawable/ico_lugar_explorar_ficha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400"
                android:id="@+id/textView15"
                android:textColor="#ffffff"
                android:textSize="10dp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
